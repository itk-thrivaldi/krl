; FOLD VAR DECLARATION
  CHAR configFileName[25]                    ;ST_ETHERNET object configuration file
  DECL RSIERR err                            ;Error value from RSI commands
  REAL lowerBound[15], upperBound[15]                ;Bounds for motion control
  INT i                                      ;Counter variable used in for-loops
  DECL AXIS HOME                             ; HOME position
  INT containerID, hEthernet, hAxis, hPath, numAxes, hPrea[6]  ;Container IDs
; ENDFOLD VAR DECLARATION

;FOLD INI
  ;FOLD BASISTECH INI
    GLOBAL INTERRUPT DECL 3 WHEN $STOPMESS==TRUE DO IR_STOPM ( )
    INTERRUPT ON 3 
    BAS (#INITMOV,0 )
  ;ENDFOLD (BASISTECH INI)
  ;FOLD USER INI
    ;Make your modifications here

  ;ENDFOLD (USER INI)
;ENDFOLD (INI)

;FOLD Configuration
  numAxes = 6                                           ; Number of axes on robot
  HOME = {AXIS: A1 0, A2 -90, A3 90, A4 0, A5 90, A6 0} ; Start position
  configFileName[] = "ros_rsi_ethernet.xml"             ; Name of XML file. Should be in c:/krc/roboter/init

  ; Internal axes
  lowerBound[1] = -200     ; lower limit A1 axis correction
  upperBound[1] =  200     ; upper limit A1 axis correction
  lowerBound[2] = -200     ; lower limit A2 axis correction
  upperBound[2] =  200     ; upper limit A2 axis correction
  lowerBound[3] = -200     ; lower limit A3 axis correction
  upperBound[3] =  200     ; upper limit A3 axis correction
  lowerBound[4] = -200     ; lower limit A4 axis correction
  upperBound[4] =  200     ; upper limit A4 axis correction
  lowerBound[5] = -200     ; lower limit A5 axis correction
  upperBound[5] =  200     ; upper limit A5 axis correction
  lowerBound[6] = -200     ; lower limit A6 axis correction
  upperBound[6] =  200     ; upper limit A6 axis correction


;ENDFOLD Configuration


; Move to start position
PTP $AXIS_ACT ; Be able to use PTP without all axes in HOME
;PTP HOME

; Create RSI Ethernet object
containerID = 0
err = ST_ETHERNET(hEthernet,containerID,configFileName[])
IF (err <> #RSIOK) THEN
  HALT
ENDIF

; Object for axis correction.
; FOLD AXISCORR
err = ST_AXISCORR(hAxis, containerID)
IF (err <> #RSIOK) THEN
  HALT
ENDIF

; Link axis correction objects from XML file
for i=1 TO numAxes
  err = ST_NEWLINK(hEthernet,i,hAxis,i)
  IF err<>#RSIOK  THEN
    HALT
  ENDIF
ENDFOR

; Set integration mode (0 absolute, 1 relative)
err = ST_SETPARAM(hAxis,1,0)
IF err<>#RSIOK THEN
  HALT
ENDIF

; Set lowerBound axis correction
for i=2 TO numAxes+1
  err = ST_SETPARAM(hAxis,i,lowerBound[i-1]);
  IF err<>#RSIOK THEN
    HALT
  ENDIF
ENDFOR

; Set upperBound axis correction
for i=14 TO numAxes+13
  err = ST_SETPARAM(hAxis,i,upperBound[i-13]);
  IF err<>#RSIOK THEN
    HALT
  ENDIF
ENDFOR

;ENDFOLD AXISCORR

; FTC output
FOR i=1 TO 6
  err = ST_SEN_PREA(hPrea[i],containerID,i,0)
  IF err<>#RSIOK  THEN
    ;RSIXML error!
    HALT
  ENDIF
ENDFOR

FOR i=1 TO 6
  err = ST_NEWLINK(hPrea[i], 1, hEthernet, i)
  IF err<>#RSIOK  THEN
    ;RSIXML error!
    HALT
  ENDIF
ENDFOR



; Start RSI execution
err = ST_ON1(#WORLD,0)
IF (err <> #RSIOK) THEN
  HALT
ENDIF

; Runs untill RSI break
ST_SKIPSENS()

; Turn off RSI 
err = ST_OFF()
IF (err <> #RSIOK) THEN
  HALT
ENDIF

; Go back to home position
; PTP HOME

END
